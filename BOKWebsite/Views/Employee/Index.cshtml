@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BOKWebsite.Models.EmployeeModel>
@{
    //ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index page was finally found! :-)</h2>

<table>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
            </td>
            <td>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="@Model.FirstOrDefault().ID" value="@item.ID" />
                    <input type="submit" value="Delete ID" />
                </form>
            </td>
        </tr>
    }
</table>

<form asp-action="Create">
    <div>
        <label asp-for="@Model.FirstOrDefault().ID"></label>
        <input asp-for="@Model.FirstOrDefault().ID" />
        <label asp-for="@Model.FirstOrDefault().FirstName"></label>
        <input asp-for="@Model.FirstOrDefault().FirstName" />
        <label asp-for="@Model.FirstOrDefault().LastName"></label>
        <input asp-for="@Model.FirstOrDefault().LastName" />
    </div>
    <div>
        <input type="submit" value="Create new entry in DB" />
    </div>
</form>

<div>
    @*<a asp-action="ApodAPI">APOD Web API Link</a>*@
    @Html.ActionLink("APOD Web API Link", "APOD", "Nasa")
</div>
<div>
    @Html.ActionLink("Go to Register page", "Register", "Account")
</div>
<div>
    @Html.ActionLink("Go to Login page", "Login", "Account")
</div>

